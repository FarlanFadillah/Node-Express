<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/form.css">
    <title>Login</title>
</head>
<body>
<div class="container">
    <form action="/auth/login" method="post" autocomplete="off">
        <h2>Login Form</h2>
        <% if(msg){ %>
        <div class="warning"><p><%=msg%></p></div>
        <% } %>
        <% if(flash){ %>
        <div class="warning"><p><%=flash%></p></div>
        <% } %>
        <div class="inputBox">
            <input type="text" name="username" required placeholder="" value="" autocomplete="off">
            <label>Username / Email</label>
        </div>
        <div class="inputBox">
            <input type="password" name="password" required placeholder="" value="" autocomplete="off">
            <label>Password</label>
        </div>
        <div class="button">
            <input type="submit" value="Login">
            <a href="register" class="register">Don't Have an Account/ Register</a>
        </div>

    </form>
</div>
</body>
</html>